# ============================================
# Premium Store Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ============================================
# Telegram Bot Configuration
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Webhook secret for additional security
# Set this if you want to verify webhook requests
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# Database Configuration
# ============================================
# Database type: 'postgresql' or 'mysql'
DB_TYPE=postgresql

# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=premium_store_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Database connection pool settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis Configuration
# ============================================
# Redis connection for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Redis password (if your Redis instance requires authentication)
REDIS_PASSWORD=

# Optional: Redis database number (default: 0)
REDIS_DB=0

# ============================================
# Payment Gateway - Duitku Configuration
# ============================================
# Required: Get these from your Duitku merchant dashboard
DUITKU_MERCHANT_CODE=your_merchant_code
DUITKU_API_KEY=your_api_key

# Payment callback URL (required for webhook)
# Replace with your actual domain
DUITKU_CALLBACK_URL=https://your-domain.com/api/payment/callback/qris

# Optional: Return URL after payment
DUITKU_RETURN_URL=

# Optional: Duitku API URLs (defaults provided)
DUITKU_API_URL=https://api.duitku.com/api/merchant/v2/inquiry
DUITKU_STATUS_URL=https://api.duitku.com/api/merchant/v2/inquiry

# Optional: Default customer contact info
DUITKU_CUSTOMER_EMAIL=customer@example.com
DUITKU_CUSTOMER_PHONE=

# ============================================
# Manual Bank Transfer Configuration
# ============================================
# Required: Bank account details for manual transfer payment method
BANK_NAME=Bank BCA
BANK_ACCOUNT_NUMBER=1234567890
BANK_ACCOUNT_HOLDER=Nama Pemilik Rekening

# ============================================
# E-Wallet Configuration (Optional)
# ============================================
# If you want to add e-wallet as payment method
# Uncomment and fill these values:
# E_WALLET_NAME=ARIS E-Wallet
# E_WALLET_NUMBER=081234567890
# E_WALLET_HOLDER=Nama Pemilik E-Wallet

# ============================================
# Security Configuration
# ============================================
# Required: Encryption key for credential encryption (32 characters minimum)
# Generate using: node scripts/generate-encryption-key.js
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Optional: JWT secret for token-based authentication (if needed)
JWT_SECRET=your_jwt_secret_here

# ============================================
# Admin Configuration
# ============================================
# Required: Telegram User IDs of admins (comma-separated)
# Get your Telegram User ID from @userinfobot on Telegram
# Example: ADMIN_TELEGRAM_IDS=123456789,987654321
ADMIN_TELEGRAM_IDS=your_telegram_user_id_here

# ============================================
# Server Configuration
# ============================================
# Server port (default: 3000)
PORT=3000
# Alternative: SERVER_PORT (takes precedence if both are set)
SERVER_PORT=3000

# Server host (default: 0.0.0.0)
SERVER_HOST=0.0.0.0

# Environment: 'development', 'production', or 'test'
NODE_ENV=development

# ============================================
# HTTPS Configuration (Production)
# ============================================
# Enable HTTPS (set to 'true' for production)
USE_HTTPS=false

# HTTPS certificate paths (required if USE_HTTPS=true)
HTTPS_KEY_PATH=/path/to/private.key
HTTPS_CERT_PATH=/path/to/certificate.crt

# ============================================
# Feature Flags
# ============================================
# Enable automatic backup scheduler (default: true)
ENABLE_BACKUP_SCHEDULER=true

# ============================================
# Debug & Logging
# ============================================
# Enable debug logging (set to 'true' for verbose logs)
DEBUG=false

